<p id="notice"><%= notice %></p>


<div class="container mt-5">

  <h1><%= @course.title %></h1>

  <p>
    <%= @course.description %>
  </p>


  <h3>Units</h3>

  <div class="row">

    <% @course.units.each do |unit| %>

        <div class="col-md-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= unit.title %></h5>
              <p class="card-text"><%= unit.description %></p>
              <%= link_to 'View Unit', unit, class: "btn btn-primary" %>
            </div>
          </div>
        </div>

    <% end %>

  </div>

  <%= link_to 'Return to Course Listing', courses_path %>

</div>
