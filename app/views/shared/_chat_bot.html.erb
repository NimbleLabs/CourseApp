      </svg>
    </button>
  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/vue@2.5.17/dist/vue.js"></script>

<script>
    var app = new Vue({
        el: '#chatbot',
        data: {
            showBotMessage: false,
            chatOpen: false
        },

        mounted() {

            setTimeout(() => {
                this.showBotMessage = true
            }, 3000)

        }
    })
</script>